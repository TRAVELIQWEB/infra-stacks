#!/bin/bash
set -e

APP_NAME="__APP_NAME__"
ENV="__ENV__"
PM2_NAME="__PM2_NAME__"
PORT="__PORT__"

BASE="/var/www/apps/$ENV/$APP_NAME"
ROOT="$BASE/current"
BACKUP="$BASE/backup"
ENV_FILE="$BASE/env/.env"
TEMP="$BASE/temp-build"

echo "üöÄ Deploying $APP_NAME (Standalone NestJS) for $ENV..."

# Clean temp
rm -rf "$TEMP"
mkdir -p "$TEMP"

# Clone branch
git clone --branch "$ENV" --depth=1 __GIT_REPO__ "$TEMP"

# Copy env to project root
cp "$ENV_FILE" "$TEMP/.env"

# Install dependencies
cd "$TEMP"
npm ci --legacy-peer-deps

# Build NestJS
echo "üèó Building NestJS..."
npm run build

# Ensure dist exists
if [ ! -f "$TEMP/dist/main.js" ]; then
  echo "‚ùå Build failed: dist/main.js missing"
  exit 1
fi

echo "üì¶ Replacing old build..."
rm -rf "$BACKUP"
[ -d "$ROOT" ] && mv "$ROOT" "$BACKUP"
mv "$TEMP" "$ROOT"

# Restart PM2
echo "üöÄ Restarting PM2..."
pm2 stop "$PM2_NAME" || true
pm2 delete "$PM2_NAME" || true
fuser -k $PORT/tcp || true
sleep 1

pm2 start "node dist/main.js" \
  --name "$PM2_NAME" \
  --cwd "$ROOT"

echo "üéâ Deployment Complete!"
